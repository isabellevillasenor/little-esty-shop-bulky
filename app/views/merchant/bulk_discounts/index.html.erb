<div class="nav-container">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <p class="navbar-text"><%= @merchant.name %></p>
    <ul class="nav navbar-nav">
      <li><%= link_to 'Dashboard', merchant_dashboard_index_path, style: 'pull-right' %>
      <%= link_to 'My Items', merchant_items_path(@merchant), style: 'pull-right' %>
      <%= link_to 'My Invoices', merchant_invoices_path(@merchant), style: 'pull-right' %>
      <%= link_to 'My Discounts', merchant_bulk_discounts_path(@merchant), style: 'pull-right' %></li>
    </ul>
  </nav>
</div>

<body>
  <div class="row">
    <p class='col-12'>My Discounts</p>
  </div>

  <%= link_to 'Create New Bulk Discount', new_merchant_bulk_discount_path %><br/>
  <br>
  
  <% @discounts.each do |d| %>
    <section id="discount-<%= d.id %>">
      <li><b><%= link_to "Discount: #{d.discount}%", merchant_bulk_discount_path(@merchant, d) %></b> off of <%= d.quantity %> items or more.
      <%= button_to 'Delete', merchant_bulk_discount_path(@merchant, d), method: :delete %></li>
    </section>
  <% end %>
</body>